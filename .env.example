#
# Demo-ready defaults (H2 in-memory)
#
DB_URL=jdbc:h2:mem:websecurity;DB_CLOSE_DELAY=-1;MODE=PostgreSQL
DB_USERNAME=sa
DB_PASSWORD=

# IMPORTANT: Use a long random secret (>= 32 bytes)
JWT_SECRET=0123456789abcdef0123456789abcdef

# Refresh token hashing pepper (server-side only)
JWT_REFRESH_PEPPER=CHANGE_ME_REFRESH_PEPPER

# Set to true behind HTTPS (production)
JWT_REFRESH_COOKIE_SECURE=false